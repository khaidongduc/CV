<div class="modal fade" id="<%= id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><%= title %> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <%= text  %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form action="<%= deleteRoute %>?_method=DELETE" method="post" id="form-<%= id %>">
                    <button type="button" id="submit-<%= id %>" class="btn btn-danger" form="modal-form">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
$("#submit-<%= id %>").on("click", () => {
    $("#form-<%= id %>").submit();
})

</script>