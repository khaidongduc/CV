<% layout('layouts/admin') %>

<div class="row">
    <div class="col-10 offset-1 col-md-6 offset-md-3 mb-3">
        <h1 class="mx-auto">New Project</h1>
        <form class="d-inline validated-form" action="/projects" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="project[title]" required autofocus>
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="url">Project URL</label>
                <input rows="5" class="form-control" type="url" id="url" name="project[url]" required>
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="repository"> Repository </label>
                <input rows="5" class="form-control" type="text" id="repository" name="project[repository]" required>
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea rows="5" class="form-control" type="text" id="description"
                    name="project[description]" required></textarea>
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description-html">HTML Description (Optional)</label>
                <textarea rows="5" class="form-control" type="text" id="html-description"
                    name="project[htmlDescription]"></textarea>
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>

            <button class="btn btn-success">New Project</button>
        </form>
        <a class="d-inline btn btn-primary" href="/projects">Back</a>
    </div>
</div>