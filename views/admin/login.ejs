<% layout('layouts/admin') %>

<div class="container justify-content-center align-items-center mt-3 mb-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-xl-6 offset-xl-3 card">
            <div class="card-body ">
                <h1 class="card-title">Login</h1>
                <form action="/admin/login" method="POST" novalidate class="validated-form mb-3">
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">
                            Looks good
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block">Login</button>
                </form>
                <hr>
                <a href="/admin/register" class="btn btn-success btn-block">Register</a>
            </div>
        </div>
    </div>
</div>