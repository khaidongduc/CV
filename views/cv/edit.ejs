<% layout('layouts/admin') %>

<div class="row">
    <div class="col-10 offset-1 col-md-6 offset-md-3 mb-3">
        <h1 class="mx-auto">Change CV</h1>
        <form class="d-inline validated-form" action="/cv" method="POST"
        enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" name="cv" id="cv" required>
                    <label class="custom-file-label" for="cv">Add CV PDF</label>
                    <div class="valid-feedback">
                        Looks good
                    </div>
                </div>
            </div>
            <button class="btn btn-success">Edit CV</button>
        </form>
        <a class="d-inline btn btn-primary" href="/cv">Back</a>
    </div>
</div>